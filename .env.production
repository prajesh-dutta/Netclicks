# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/netclicks?retryWrites=true&w=majority

# NextAuth Configuration
# Generate a secure secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your_secure_nextauth_secret_here

# Digital Ocean URL (update this with your actual droplet domain or IP)
DIGITAL_OCEAN_URL=https://your-app-domain.com
NEXTAUTH_URL=https://your-app-domain.com

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Node environment
NODE_ENV=production